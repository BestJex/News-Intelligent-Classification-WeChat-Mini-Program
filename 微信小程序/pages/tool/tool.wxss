#tool {
  width: 100%;
  height: 100%;
  padding: 0.3rem 0.2rem 0 0.2rem;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
}

.category {
  margin-bottom: 1rem;
  width: 100%;
}

.text {
  width: 80%;
  margin: 0 auto;
  text-align: center;
  font-size: 1.5rem;
  margin-bottom: 1rem;
}

.category input {
  margin: 0 auto;
  width: 80%;
  height: 70rpx;
  min-height: 70rpx;
  border: 0.1rem solid #c8c8c8;
  border-radius: 0.5rem;
  margin-bottom: 1rem;
  text-align: center;
}

.category button {
  width: 80%;
  height: 70rpx;
  line-height: 70rpx;
}